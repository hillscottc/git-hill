@model ReceiptSite.Models.Receipt
@{
    ViewBag.Title = "Edit";
}
<h2>
    Edit</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Receipt</legend>
        @Html.HiddenFor(model => model.id)
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @* Must use TextBoxFor instead of EditorFor if you want to style it. *@
            @Html.TextBoxFor(model => model.Name, new { style = "width: 500px;" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.TextData)
        </div>
        <div class="editor-field">
            @* Must use TextBoxFor instead of EditorFor if you want to style it. *@
            @Html.TextBoxFor(model => model.TextData, new { style = "width: 500px;" })
        </div>
        <div class="editor-label">
            @*  Using the label for the id here. *@
            @Html.LabelFor(model => model.ReceiptImageId)
        </div>
        <div class="editor-field">
            <img src="@Url.Content(Model.ImageBank1.ImageFilePath)" alt="receipt" width="200" />
        </div>
        <div class="editor-label">
            @*  Using the label for the id here. *@
            @Html.LabelFor(model => model.BlankImageId)
        </div>
        <div class="editor-field">
            <img src="@Url.Content(Model.ImageBank.ImageFilePath)" alt="receipt" width="200" />
        </div>
