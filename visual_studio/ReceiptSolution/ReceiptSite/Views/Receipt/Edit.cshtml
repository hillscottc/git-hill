         <div class="editor-label">
            @Html.LabelFor(model => model.Play_Count)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Play_Count)
            @Html.ValidationMessageFor(model => model.Play_Count)
        </div>*@
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}
