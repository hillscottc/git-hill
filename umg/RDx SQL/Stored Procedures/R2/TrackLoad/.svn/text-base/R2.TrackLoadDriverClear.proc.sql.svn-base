-- Description:	Deletes all records from the R2.LoadTrackDriver table
-- =============================================
CREATE PROCEDURE [R2].[TrackLoadDriverClear]
AS
begin

	declare @existingBatchRows int
	set @existingBatchRows = 0

	-- see if we have loaded records (i.e. rows with workflow_code = 'L')
	select @existingBatchRows = count(*) from R2.LoadTrackDriver where [WORKFLOW_CODE] = 'L'
	if (@existingBatchRows > 0)
		return;
		
	truncate table R2.LoadTrackDriver;
end	
